# User and timezone settings
PUID=1000
PGID=1000
TZ=America/New_York

# Base paths for media and appdata
APPDATA_PATH=/mnt/user/appdata
MEDIA_PATH=/mnt/user/media

# Plex claim token (get fresh token from plex.tv/claim, expires in 4 min)
PLEX_CLAIM=

# Plex hardware transcoding device (AMD/Intel)
PLEX_DRI_DEVICE=/dev/dri

# Real Debrid API Key (from https://real-debrid.com/apitoken)
RD_API_KEY=

# Real Debrid mount path (local path for rclone to mount RD torrents)
REALDEBRID_MOUNT=/mnt/user/realdebrid
