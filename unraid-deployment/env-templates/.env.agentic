# Timezone
TZ=America/New_York

# Base appdata path
APPDATA_PATH=/mnt/user/appdata

# Custom Docker network for AI services
AI_GRID_NETWORK=ai_grid

# n8n public URLs (used for webhooks + UI)
N8N_HOST=n8n.happystrugglebus.us
N8N_EDITOR_BASE_URL=https://n8n.happystrugglebus.us
N8N_WEBHOOK_URL=https://n8n.happystrugglebus.us

# Browserless
BROWSERLESS_TOKEN=change-me
BROWSERLESS_PORT=3005
BROWSERLESS_MAX_SESSIONS=5

# Cloudflare Tunnel (Zero Trust)
CF_TUNNEL_TOKEN=replace-with-your-cloudflared-token

# Optional: internal Ollama URL for n8n workflows
OLLAMA_BASE_URL=http://ollama:11434
